{
  "manifest_version": 3,
  "name": "HKS Extension",
  "version": "1.0.0",
  "description": "Production ready Chrome Extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "tabs", "identity", "cookies", "activeTab"],
  "host_permissions": [
    "https://higherkeys.com/*",
    "https://*.higherkeys.com/*",
    "https://*.youtube.com/*",
    "https://*.pornhub.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "icons": {
    "16": "public/logo.png",
    "48": "public/logo.png",
    "128": "public/logo.png"
  }
}
